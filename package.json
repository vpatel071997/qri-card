{
  "name": "qri-card",
  "version": "1.1.0",
  "description": "Say goodbye to typing in phone numbers or emailsâ€”just generate your vCard, share your unique QR code, and connect instantly.",
  "main": "electron.js",
  "homepage": "./",
  "author": {
    "name": "Vaibhav Patel",
    "email": "vpatel071997@gmail.com",
    "url": "https://vpatel.au"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "bootstrap": "^5.3.6",
    "framer-motion": "^12.14.0",
    "html-to-image": "^1.11.13",
    "i": "^0.3.7",
    "lz-string": "^1.5.0",
    "npm": "^11.4.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "^19.1.0",
    "react-qr-code": "^2.0.15",
    "react-router": "^7.6.1",
    "react-router-dom": "^7.6.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "prettier --write .",
    "lint:check": "prettier --check .",
    "script": "bash ./script.sh",
    "electron": "electron .",
    "electron:dev": "concurrently --name \"client\" \"cross-env BROWSER=none npm run start\" --name \"desktop\" \"electron .\"",
    "electron:dist": "npm install && npm run script && npm run build && npm run script && cp electron.js ./build/electron.js && electron-builder"
  },
  "build": {
    "appId": "com.vpatel071997.qricard",
    "productName": "QriCard",
    "files": [
      "build/**/*",
      "electron.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  }
}
